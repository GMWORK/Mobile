<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".view.Identificador">
    <RelativeLayout
        android:background="@drawable/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout4">
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Menu Principal"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="6"
        android:layout_column="1" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hola,"
        android:id="@+id/textView14"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario"
        android:id="@+id/am_tv_nombreUsuario"
        android:layout_below="@+id/relativeLayout4"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"

        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:background="@drawable/circle_shape"
            android:drawableRight="@drawable/pedidos"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/am_bt_pedido"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center" />

        <Button
            android:background="@drawable/clientes"

            android:id="@+id/am_bt_cli"
            android:layout_row="1"
            android:layout_column="2"
/>

        <Button
            android:id="@+id/am_btn_sVisitarGeo"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/cliCercanos"
            android:layout_width="wrap_content"
/>

        <Button
            android:background="@drawable/selecClientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/am_btn_seleVisitar"
            android:layout_row="2"
            android:layout_column="2"
 />


    </GridLayout>



    <Button
        android:background="@drawable/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Session"
        android:id="@+id/am_btn_finish"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Selecciona una opcion..."
        android:id="@+id/textView13"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center"

        android:layout_rowSpan="3"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>