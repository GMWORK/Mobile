<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".view.Identificador">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Menu Principal"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="6"
        android:layout_column="1" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"

        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:background="@drawable/botones_gp"

            android:id="@+id/am_bt_pedido"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="top|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Selecciona una opcion..."
            android:id="@+id/textView13"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_rowSpan="3" />

        <Button
            android:id="@+id/am_btn_sVisitarGeo"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/botones_vc"
            android:layout_width="wrap_content"
            android:layout_gravity="top|right" />

        <Button
            android:background="@drawable/botones_gc"

            android:id="@+id/am_bt_cli"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="bottom|left" />

        <Button
            android:background="@drawable/botones_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/am_btn_seleVisitar"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="bottom|right" />


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hola,"
        android:id="@+id/textView14"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario"
        android:id="@+id/am_tv_nombreUsuario"
        android:layout_alignTop="@+id/textView14"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Session"
        android:id="@+id/am_btn_cs"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>