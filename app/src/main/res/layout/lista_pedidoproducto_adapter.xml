<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:drawable/toast_frame"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lppa_tv_nombre"
        android:text="nombreProducto"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="cantidad"
    android:id="@+id/textView"
    android:layout_alignTop="@+id/lppa_tv_cantidad"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lppa_tv_cantidad"
        android:text="cantidad"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/lppa_tv_precio"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Precio Unidad:"
        android:id="@+id/lppa_tv_pU"
        android:layout_below="@+id/lppa_tv_nombre"
        android:layout_toLeftOf="@+id/lppa_tv_nombre"
        android:layout_toStartOf="@+id/lppa_tv_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="etiqueta_precio"
        android:id="@+id/lppa_tv_precio"
        android:layout_below="@id/lppa_tv_pU"
        android:layout_toRightOf="@id/lppa_tv_pU"
        android:layout_toEndOf="@id/lppa_tv_pU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="preciototal:"
        android:id="@+id/textView3"
        android:layout_below="@+id/lppa_tv_cantidad"
        android:layout_toLeftOf="@+id/lppa_tv_precio"
        android:layout_toStartOf="@+id/lppa_tv_precio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="precio_total_con_la_cantidad"
        android:id="@+id/lppa_tv_precioTotal"
        android:layout_below="@+id/lppa_tv_cantidad"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descontar"
        android:id="@+id/lppa_btn_restar"
        android:layout_above="@+id/lppa_tv_precioTotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aÃ±adir"
        android:id="@+id/lppa_btn_sumar"
        android:layout_alignTop="@+id/lppa_btn_restar"
        android:layout_toLeftOf="@+id/lppa_btn_restar"
        android:layout_toStartOf="@+id/lppa_btn_restar" />

</RelativeLayout>