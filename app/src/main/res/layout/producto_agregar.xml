        android:layout_alignStart="@+id/textView28"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Precio descuento:"
        android:id="@+id/textView30"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pa_tv_nombre"
        android:layout_alignTop="@+id/textView28"
        android:layout_toLeftOf="@+id/pa_iv_pro"
        android:layout_toStartOf="@+id/pa_iv_pro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_pr_pre"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignLeft="@+id/pa_tv_nombre"
        android:layout_alignStart="@+id/pa_tv_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pa_pd_precioDescu"
        android:layout_alignTop="@+id/textView30"
        android:layout_toRightOf="@+id/pa_tv_nombre"
        android:layout_toEndOf="@+id/pa_tv_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Categoria:"
        android:id="@+id/textView34"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView28"
        android:layout_alignLeft="@+id/textView28"
        android:layout_alignStart="@+id/textView28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pa_tv_cat"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignLeft="@+id/pa_tv_nombre"
        android:layout_alignStart="@+id/pa_tv_nombre" />

    <Button
        android:background="@drawable/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir Producto A Lista"
        android:id="@+id/pa_btn_agregar"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView34"
        android:layout_toEndOf="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cantidad "
        android:id="@+id/textView36"
        android:layout_below="@+id/textView30"
        android:layout_alignLeft="@+id/textView30"
        android:layout_alignStart="@+id/textView30"
        android:layout_marginTop="32dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pa_number_picker"
        android:background="#fffff8ff"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" />
</RelativeLayout>