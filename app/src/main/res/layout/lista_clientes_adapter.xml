<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lca_iv_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:drawable/toast_frame"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:id="@+id/lca_tv_nombre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apellidos"
        android:id="@+id/lca_tv_apellidos"
        android:layout_below="@+id/lca_tv_nombre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Poblacion:"
        android:id="@+id/lca_tv_poblacion"

        android:layout_below="@+id/lca_tv_apellidos"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calle:"
        android:id="@+id/lca_tv_calle"

        android:layout_below="@+id/lca_tv_poblacion"
        android:layout_centerHorizontal="true" />


</RelativeLayout>